    <%for ( let i = 0; i < summarys.length; i++ ) {%>
      <h3><%=summarys[i].companyName%></h3></br>
      People attending event: <%=summarys[i].people%></br>
      Day: <%=summarys[i].date%></br>
      Hour: <%=summarys[i].hour%></br>
      Special comments: <%=summarys[i].comments%></br>

        <input type="submit" value="Edit event">
        <input type="submit" value="Delete event">


    <%}%>

