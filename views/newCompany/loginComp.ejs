<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>

    <a href="/">Go back Home</a> <br/>

    <h1>Login</h1>
    <form action="/newCompany/loginComp" method="POST">
      <input type="text" name="username" placeholder="username"> <br/>
      <input type="password" name="password" placeholder="password"> <br/>
      <button type="submit">Sign In</button>
    </form>
    <% if(typeof message !== 'undefined'){ %>
      <p><%=message%></p>
    <% } %>

    <h1>Register</h1>
    <form action="/newCompany/registerComp" method="POST"> <br/>
      <input type="text" name="companyName" placeholder="Name of the Company"><br/>
      <input type="text" name="location" placeholder="Address of Company"><br/>
      <input type="text" name="phone" placeholder="Phone"><br/>
      <input type="text" name="email" placeholder="Email"><br/>
      <input type="text" name="password" placeholder="Password"><br/>
      <button type="submit">Sign In</button>
    </form>

  </body>
</html>
